//-Card wrapper
    Creates a card, containing any type of content

    cardObject

    {
        id:
        classes:
        backgroundClass:
        textClass:
        hoverable:
        title:
        content:
        actions:[]
    }

    <mz-card
        [backgroundClass]="'blue-grey darken-1'"
        [textClass]="'white-text'"
        [hoverable]="true">
        <mz-card-title>
            Card Title
        </mz-card-title>
        <mz-card-content>
            I am a very simple card. I am good at containing small bits of information. I am convenient because I require little markup to use effectively.
        </mz-card-content>
        <mz-card-action>
            <a href="#">This is a link</a>
            <a href="#">This is a link</a>
        </mz-card-action>
    </mz-card>

mixin mz-card(cardObject, content)
    mz-card('[backgroundClass]'= cardObject.backgroundClass '[textClass]'= cardObject.textClass '[hoverable]'= cardObject.hoverable)
        if cardObject.title
            mz-card-title()= content